FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application files
COPY . .

# Expose Vite dev server port
EXPOSE 8080

# Start development server with port override
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "8080"]
